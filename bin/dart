DART_SDK="https://storage.googleapis.com/dart-archive/channels/stable/release/45396/sdk/dartsdk-linux-x64-release.zip"

echo "-----> Installing Dart SDK via URL $DART_SDK"
gem update --system
gem install compass

dart_dir="$1/dart"
echo "-----> Installing Dart SDK via URL $DART_SDK"
[ -d "$dart_dir" ] && (cd "$dart_dir" &&
curl -o dart_sdk.zip "$DART_SDK" &&
unzip dart_sdk.zip &&
dart-sdk/bin/pub build --mode release
)

